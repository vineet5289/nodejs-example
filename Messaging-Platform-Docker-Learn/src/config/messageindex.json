{
  "template": "chat-message-*",
  "order": 0,
  "settings": {
    "number_of_shards": 5,
    "number_of_replicas": 3
  },
  "mappings": {
    "properties": {
      "chat_room_id": { "type": "keyword", "index": true, "store": true },
      "message_id": { "type": "text", "index": false, "store": false },
      "message": {
        "type": "text",
        "index": true,
        "store": true,
        "analyzer": "standard"
      },
      "user_ids": { "type": "integer", "index": true, "store": true },
      "is_active": { "type": "boolean", "index": false },
      "is_deleted": { "type": "boolean", "index": false },
      "created_at": {
        "type": "date",
        "index": false
      },
      "message_status": { "type": "integer", "index": false, "store": false }
    }
  }
}
